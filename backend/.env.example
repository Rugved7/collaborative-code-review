ENVIRONMENT=development

# Database
DATABASE_URL=postgres://postgres:postgres@localhost:5432/codereview?sslmode=disable
DB_MAX_CONNECTIONS=25
DB_MAX_IDLE_CONNS=5
DB_CONN_MAX_LIFETIME=1h

# Redis
REDIS_ADDR=localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT
JWT_SECRET=your-secret-key-minimum-32-characters-for-production-use
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=168h

# AWS
AWS_REGION=ap-south-1
AWS_S3_BUCKET=codereview-diffs-dev
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# Service Ports
AUTH_SERVICE_PORT=8001
REVIEW_SERVICE_PORT=8002
COMMENT_SERVICE_PORT=8003
WEBSOCKET_SERVICE_PORT=8004
ANALYSIS_SERVICE_PORT=8005
